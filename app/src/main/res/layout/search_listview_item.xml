<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Search_Item_Body"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_Search_Icon"
            android:layout_width="120dip"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Search"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_Search_Name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:text="search_text"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_Search_Detail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="search_detail"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight="2">


        <ImageView
            android:id="@+id/image_SearchCalling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/call_button" />

    </LinearLayout>
    <!-- android:clickable="true"
     android:focusable="true"
 -->

    <TextView
        android:id="@+id/text_Search_Id"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_Search_Pnum"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_Search_lau"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="invisible" />

</LinearLayout>
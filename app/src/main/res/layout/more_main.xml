<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_intro_app"
            android:layout_width="340dip"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"
            android:layout_weight="1"
            android:background="#00467F"
            android:backgroundTint="@color/colorPrimary"
            android:text="어플 소개"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/button_intro_dev"
            android:layout_width="340dip"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#00467F"
            android:backgroundTint="@color/colorPrimary"
            android:text="개발진 소개"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:gravity="center"
            android:text="개발자에게 문의하실 사항이 있으시면\n 아래 '문의하기' 버튼을 눌러주세요."
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_deli"
            android:layout_width="0dip"
            android:layout_height="65dp"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="배달"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button_inf"
            android:layout_width="0dip"
            android:layout_height="65dp"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="생활정보"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button_fre"
            android:layout_width="0dip"
            android:layout_height="65dp"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="문의하기"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="0dip"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="더보기"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>